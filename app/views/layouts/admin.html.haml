!!!
%html
  %head
    %meta{charset: 'utf-8'}
    %meta{content: 'IE=edge,chrome=1', 'http-equiv' => 'X-UA-Compatible'}
    %meta{name: 'description', content: ''}
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no'}
    %meta{name: 'apple-mobile-web-app-capable', content: 'yes'}
    %meta{name: 'apple-mobile-web-app-title', content: 'Weird Catalog'}
    %meta{name: 'apple-mobile-web-app-status-bar-style', content: 'black'}

    -#%meta{property: 'og:url', content: 'http://www.weirdcatalog.com'}
    -#%meta{property: 'og:type', content: 'website'}
    -#%meta{property: 'og:title', content: 'Weird Catalog'}
    -#%meta{property: 'og:description', content: ''}
    -#%meta{property: 'og:image', content: ''}

    -#%link{rel: 'apple-touch-startup-image', href: '/startup.png', media: '(device-width: 320px)'}
    -#%link{rel: 'apple-touch-startup-image', href: '/startup-iphone6.png', media: '(device-width: 375px)'}
    -#%link{rel: 'apple-touch-icon', href: '/apple-touch-icon.png'}
    -#%link{rel: 'shortcut icon', href: '/favicon.png', type: 'image/x-icon'}
    -#%link{rel: 'icon', href: '/favicon.png', type: 'image/x-icon'}

    %title Weird Catalog

    = stylesheet_link_tag 'application'
    = csrf_meta_tags

  %body
    %nav.top-bar{data: {topbar: true}, role: 'navigation'}
      %ul.title-area
        %li.name
          %h1
            %a{href: admin_path} Weird Catalog

      %section.top-bar-section
        %ul.right
          - if signed_in?
            %li
              %a{href: sign_out_path, data: {method: 'delete'}} Sign Out
          - else
            %li
              %a{href: sign_in_path} Sign In

    .row
      .columns.small-12
        .flash-container
          - flash.each do |key, value|
            .flash{class: "#{key}"} #{value}
    .row
      .columns.small-12
        = yield
    = javascript_include_tag 'application'
