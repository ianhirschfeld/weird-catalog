= simple_form_for [:admin, item] do |f|
  = f.input :name, as: :string
  = f.input :url, as: :string
  = f.input :description
  = f.input :creator, as: :string
  = f.input :released_at, as: :date, html5: true
  = f.association :catalog_category
  = f.button :submit
  &nbsp;&nbsp;&nbsp;
  %a.button.tiny.secondary{href: admin_catalog_items_path} Cancel
