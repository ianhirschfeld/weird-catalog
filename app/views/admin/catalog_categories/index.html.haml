%ul.breadcrumbs
  %li
    %a{href: admin_path} Portal
  %li.current
    %a{href: admin_catalog_categories_path} Catalog Categories

.row
  .columns.small-12
    %h2 Catalog Categories

    %a.button{href: new_admin_catalog_category_path} + Add Catalog Category

    - if @categories.count > 0
      %table
        %thead
          %tr
            %th Name
            %th Items
            %th Actions
        %tbody
          - @categories.each do |category|
            %tr
              %td
                %a{href: edit_admin_catalog_category_path(category.id)} #{category.name}
              %td #{category.catalog_items.count}
              %td
                %a{href: edit_admin_catalog_category_path(category.id)} Edit
                |
                %a{href: admin_catalog_category_path(category.id), data: {method: 'delete', confirm: 'Are you sure you want to delete this?'}} Delete

    - else
      %p There are no catalog categories yet.
